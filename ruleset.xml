<?xml version="1.0"?>
<ruleset name="Merces">
    <description>Coding standard for Merces.</description>

    <!-- There should not be any code in those directories. -->
    <exclude-pattern>*/js/*</exclude-pattern>
    <exclude-pattern>*/css/*</exclude-pattern>
    <exclude-pattern>*/views/*</exclude-pattern>

    <!-- Include standards -->
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>

    <!-- Complexity -->
    <rule ref="Generic.Metrics.CyclomaticComplexity"/>
</ruleset>
